<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AlertDiaglog using Fragment Demo"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:background="#00FFAA"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyAlert as popup"
        android:id="@+id/button"
        android:onClick="showAlertDialogFragment"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog fragment With List"
        android:id="@+id/button2"
        android:onClick="showDialogWithList"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog fragment With Checked Items"
        android:id="@+id/button3"
        android:onClick="showDialogWithMultiSelect"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog w/ no fragment"
        android:id="@+id/button4"
        android:onClick="showAlertDialog"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog frament with custom design"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="showDialogWithCustomDesign" />


</RelativeLayout>
